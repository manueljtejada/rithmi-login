<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="android:textColorHint">@color/grayLight</item>
        <item name="android:textColor">@color/grayLight</item>
        <item name="colorControlActivated">@color/grayLight</item>
        <item name="colorControlNormal">#AFADB7</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grayLight</item>
    </style>
    
</resources>
